extends layout

block content
	#voterRoomInfo Room: #{roomId} 
		.status.newRound Choose a card!
		.status.roundEnd Round is over.
	#voterInfo
		img.voterImage#avatar(src='#{avatar}')
		h3.voterName #{user}
		#cardStyle
			h4 Card Style
			div#cardPreview
				div.cardBack.argile(style='background-color:#{cardColor}')
		#issueInfo

	table#estimateOptions

	div#cardStylePop
		div.close X
		label Pattern
		select#pattern
			option argile
			option denim
			option graphpaper
			option paisley
			option wood
			option goat
		label Color
			input(title='Select card color', type='color', value='#{cardColor}')#color


	script.
		var bp = {
			roomId: #{roomId},
			avatar: "#{avatar}",
			user: "#{user}"
		}
	script(src="/socket.io/socket.io.js")
	script(src="/javascripts/clientVoter.js")
